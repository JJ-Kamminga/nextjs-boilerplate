{
  "compilerOptions": {
    "module": "esnext",
    "target": "esnext",
    "sourceMap": true,
    "outDir": "./build/",
    "moduleResolution": "node",
    "strict": true,
    "lib": [
      "dom",
      "esnext",
      "dom.iterable",
      "scripthost"
    ],
    "allowJs": true, //added by next
    "skipLibCheck": true, //added by next
    "forceConsistentCasingInFileNames": true, //added by next
    "noEmit": true, //added by next
    "esModuleInterop": true, //added by next // requirement for babel
    "resolveJsonModule": true, //added by next // to match webpack resolution
    "isolatedModules": true, //added by next // requirement for babel
    "jsx": "preserve" //added by next //next.js implements its own optimized jsx transform
  },
  "include": [
    "src/**/*.ts"
  ],
  "compileOnSave": true,
  "exclude": [
    "node_modules"
  ]
}
